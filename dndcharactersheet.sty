% calculates Proficiency Bonus based on the Character Level
\NewExpandableDocumentCommand\CharProficiencyBonus{m}{
	\int_compare:nTF {#1 < 5}	{2}
	{\int_compare:nTF {#1 < 9}	{3}
	{\int_compare:nTF {#1 < 13}	{4}
	{\int_compare:nTF {#1 < 17}	{5}
								{6}
	}}}
}

